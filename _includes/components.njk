{% macro linkButton(text, link, image, imgClasses="", newTab=true) %}
  <a
    href="{{ link }}"
    class="link-button"
    {% if newTab %}target="_blank"{% endif %}
  >
    <img src="{{ image }}" alt="{{ text }}" class="icon {{ imgClasses }}" />
    <div class="text">{{ text }}</div>
  </a>
{% endmacro %}
