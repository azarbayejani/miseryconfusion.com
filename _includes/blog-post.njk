<article>
  {% if title %}
    <header>
      <h1>{{ title }}</h1>
      {% if subtitle %}
        <div>{{ subtitle }}</div>
      {% endif %}
      <div class="date">
        Posted on {{ page.date | fullDate }} by
        <a href="/about">miseryconfusion</a>
      </div>
    </header>
  {% endif %}

  {{ content | safe }}
</article>
